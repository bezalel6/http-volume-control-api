# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Pairing Configuration
PAIRING_CODE_LENGTH=6
PAIRING_CODE_EXPIRY=300
PAIRING_MAX_ATTEMPTS=3
PAIRING_COOLDOWN=900

# Session Configuration
SESSION_TOKEN_LENGTH=32
SESSION_TOKEN_EXPIRY=2592000
SESSION_MAX_PER_USER=10
SESSION_SLIDING_EXPIRY=true

# Security
SESSION_IP_BINDING=false
SESSION_USER_AGENT_CHECK=true

# Logging
LOG_LEVEL=info

# Audio Service Debug
AUDIO_DEBUG=false

# Paths (optional, defaults to binaries folder)
# SVCL_PATH=./binaries/svcl.exe
# GETNIR_PATH=./binaries/GetNir.exe
# EXTRACTICON_PATH=./binaries/extracticon.exe